PORT=3000
ENV=dev

# Comma-separated list of allowed origins, e.g. http://localhost:3000
# Leave empty to allow all origins (dev convenience).
CORS_ALLOWED_ORIGINS=

MONGO_URI=mongodb://localhost:27017/repair_management

# JWT auth for /repair/v1/*
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d

# Protects /repair/admin/v1/superadmin/bootstrap (only works if no superadmin exists yet)
BOOTSTRAP_TOKEN=change_me_too

# Beem SMS (optional)
BEEM_ENABLED=false
BEEM_SMS_API=
BEEM_AUTH_TOKEN=
BEEM_SOURCE_ADDRESS=
